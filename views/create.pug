 mixin makeBox(type)
  div&attributes(attributes)
   if (type == "gnome")
    div: +gnomeBox
   else if (type == "town")
    div: +townBox
   else if (type == "testimonial")
    div: +testimonialBox
   else if (type == "ght")
    div: +ghtBox


   
  // script.
  //  if type == "town"
 mixin townBox
  div&attributes(attributes)
  .input-group(style={margin: "16px"})
   span.input-group-addon Town Name
   input.form-control(type="text", name="townName")
  button.btn.btn-block.btn-primary(type="submit") Submit

 mixin testimonialBox
  div&attributes(attributes)
  div(style={margin: "16px"})
   textarea.form-control(rows="4", name="summary")
  button.btn.btn-block.btn-primary(type="submit") Submit

 mixin ghtBox
  div&attributes(attributes)
  div(style={margin: "16px"})
   textarea.form-control(rows="4", name="summary")
  button.btn.btn-block.btn-primary(type="submit") Submit
    
 mixin gnomeBox
  div&attributes(attributes)
  .input-group(style={margin: "16px"})
   span.input-group-addon First Name
   input.form-control(type="text", name="firstName")
  .input-group(style={margin: "16px"})
   span.input-group-addon Last Name
   input.form-control(type="text", name="lastName")
  .input-group(style={margin: "16px"})
   span.input-group-addon Christening Name
   input.form-control(type="text", name="christeningName")
  .input-group(style={margin: "16px"})
   span.input-group-addon Threat level
   input.form-control(type="text", name="threatLevel")
  button.btn.btn-block.btn-primary(type="submit") Submit
